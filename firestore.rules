rules_version = '2';

// ATENÇÃO:
// Este arquivo estava ausente no repositório, mas é referenciado em `firebase.json`.
// Revise essas regras antes de fazer deploy em produção.
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra padrão (simples): exige usuário autenticado.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}


