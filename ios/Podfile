# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)
require 'fileutils'

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  # Xcode/Clang compatibility workaround:
  # gRPC-Core (used via Firebase/Firestore) includes a C++ line that newer Clang
  # rejects: `Traits::template CallSeqFactory(...)` (no explicit <...> args).
  # Fix it after install so the pod builds on newer Xcode versions.
  grpc_basic_seq_paths = [
    File.join(
      installer.sandbox.root.to_s,
      'gRPC-Core', 'src', 'core', 'lib', 'promise', 'detail', 'basic_seq.h'
    ),
    File.join(
      installer.sandbox.root.to_s,
      'gRPC-C++', 'src', 'core', 'lib', 'promise', 'detail', 'basic_seq.h'
    ),
  ]

  grpc_basic_seq_paths.each do |path|
    next unless File.exist?(path)

    contents = File.read(path)
    fixed = contents.gsub('Traits::template CallSeqFactory', 'Traits::CallSeqFactory')
    next if fixed == contents

    # Pods sources can be marked read-only; make the file writable first.
    FileUtils.chmod('u+w', path)
    File.write(path, fixed)
  end

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      # Pods should not need signing for simulator builds; disabling avoids
      # intermittent CodeSign failures on frameworks (e.g. xattr/resource fork).
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
    end

    # Workaround: Some CocoaPods setups may inject the build setting
    # `GCC_WARN_INHIBIT_ALL_WARNINGS` as an invalid compiler flag
    # (`-GCC_WARN_INHIBIT_ALL_WARNINGS`) for BoringSSL-GRPC sources.
    # Clang then interprets it as `-G`, which is unsupported on iOS simulator.
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        next unless file.settings && file.settings['COMPILER_FLAGS']

        flags = file.settings['COMPILER_FLAGS']
        flags = flags.gsub('-GCC_WARN_INHIBIT_ALL_WARNINGS', '')
        flags = flags.gsub(/\s+/, ' ').strip
        file.settings['COMPILER_FLAGS'] = flags
      end
    end
  end
end
